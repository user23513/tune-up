<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.up.tune.aprv.aprvList.mapper.AprvListMapper">


	<!-- 관리자조회 -->
	<select id="aprvListAll" resultType="co.up.tune.aprv.vo.AprvVO"
		parameterType="co.up.tune.aprv.vo.AprvVO">
		SELECT *
		FROM APRV
		ORDER BY APRV_NO DESC
	</select>


	<!-- 나의조회 -->
	<select id="aprvList" resultType="co.up.tune.aprv.vo.AprvVO"
		parameterType="co.up.tune.aprv.vo.AprvVO">
		SELECT *
		FROM APRV
		WHERE EMP_NO = #{empNo}
		ORDER BY APRV_NO DESC
	</select>

	<!-- 단건조회 -->
	<select id="aprvSelect" resultType="co.up.tune.aprv.vo.AprvVO"
		parameterType="co.up.tune.aprv.vo.AprvVO">
		SELECT *
		FROM APRV
		WHERE APRV_NO=#{aprvNo}
	</select>

	<!-- 내용조회 -->
	<select id="cntnList" resultType="co.up.tune.aprv.vo.ItemCntnVO"
		parameterType="co.up.tune.aprv.vo.ItemCntnVO">
		SELECT * 
		FROM FORM_ITEM
		WHERE APRV_NO = #{aprvNo}
		UNION ALL
		SELECT *
		FROM APRV_CNTN
		WHERE APRV_NO = #{aprvNo}
	</select>
	
	
	






</mapper>