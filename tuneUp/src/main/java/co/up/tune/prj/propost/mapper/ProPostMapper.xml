<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.up.tune.prj.propost.mapper.PropostMapper">
				  
	<select id="prjPostList" resultType="co.up.tune.prj.vo.PostVO">
	SELECT *
	FROM POST 
	ORDER BY POST_NO DESC
	</select>
	
	<insert id="prjPostInsert" parameterType="co.up.tune.prj.vo.PostVO">
	
		<!-- INSERT INTO POST (ttl,cntn)
	VALUES (PNO_SEQ.NEXTVAL,#{ttl},#{cntn}) -->
	INSERT INTO POST
		VALUES (PNO_SEQ.NEXTVAL,#{empNo},#{wrtr},#{ttl},#{cntn},sysdate,#{atchNo},#{prjNo}) 
	</insert>
	
	 <update id="prjPostUpdate" parameterType="co.up.tune.prj.vo.PostVO">
		UPDATE POST
		<set>
			<if test="ttl != null">TTL=#{ttl},</if>
			<if test="cntn != null">CNTN=#{cntn}</if>
		</set>
		WHERE POST_NO=#{postNo}
	</update> 
	
	 <!-- <update id="prjPostUpdate" parameterType="co.up.tune.prj.vo.PostVO">
	 <![CDATA[
            UPDATE 
                POST 
            SET
                ttl = #{ttl},
                cntn = #{cntn},
                dttm = sysdate
            WHERE
                post_no = 126
        ]]>
	</update> -->
	
	
	<delete id="prjPostDelete" parameterType="co.up.tune.prj.vo.PostVO">
	DELETE FROM POST WHERE POST_NO = #{postNo}
	</delete>
	
	<select id="prjPostSelect" resultType="co.up.tune.prj.vo.PostVO" parameterType="co.up.tune.prj.vo.PostVO">
		SELECT * 
			FROM POST
				WHERE POST_NO = #{postNo}
	</select>
	
	<!-- 댓 -->
	

	<select id="ppReplyList" parameterType="co.up.tune.com.vo.ReplyVO" resultType="co.up.tune.com.vo.ReplyVO">
		SELECT REPLY_NO, 
			   POST_NO, 
			   EMP_NO, 
			   WRTR,
			   CNTN, 
			   DTTM, 
			   REPLY_CAT 
		FROM REPLY
		WHERE POST_NO = #{postNo}
		ORDER BY REPLY_NO DESC
	</select>
	
	
	<insert id="ppReplyInsert" parameterType="co.up.tune.com.vo.ReplyVO">
		 <selectKey keyProperty="replyNo" order="BEFORE" resultType="int">
			SELECT 
			    CASE WHEN MAX(REPLY_NO) IS NULL THEN 1
			    ELSE MAX(REPLY_NO)+1 
			    END AS NO
			FROM REPLY
		</selectKey> -
		INSERT INTO 
			REPLY
				VALUES(#{replyNo}, #{postNo}, #{wrtr}, #{cntn}, SYSDATE,'프로젝트글')
		WHERE POST_NO = #{postNo}
	</insert>
	
	
	<delete id="ppReplyDelete" parameterType="co.up.tune.com.vo.ReplyVO">
		DELETE FROM REPLY
		WHERE REPLY_NO = #{replyNo}
	</delete>
	
	<select id="ppreplySelect" resultType="co.up.tune.com.vo.ReplyVO" parameterType="co.up.tune.com.vo.ReplyVO">
		SELECT * 
		FROM REPLY
		WHERE REPLY_NO = #{replyNo}
	</select>
	
</mapper>